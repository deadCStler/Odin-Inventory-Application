<h1><%= title %>: <%= category.name %></h1>

<% if (category_weapons.length) { %>
<p>
  <strong>Delete the following weapons before attempting to delete this category.</strong>
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Weapons</h4>
  <dl>
    <% category_weapons.forEach(function(weapon) { %>
    <dt><a href="<%= weapon.url %>"><%= weapon.name %></a></dt>
    <dd><%= weapon.description %></dd>
    <% }); %>
  </dl>
</div>
<% } else { %>
<p>Do you really want to delete this Category?</p>
<form method="POST">
  <div class="form-group">
    <input
      id="categoryid"
      class="form-control"
      type="hidden"
      name="categoryid"
      value="<%= category._id %>"
    />
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %>
